<% @pagetitle = "Meta Configuration of #{@project}" %>
<% @metarobots = 'noindex' %>
<% project_bread_crumb('Meta') %>

<%= render :partial => 'tabs' %>

<h3><%= @pagetitle %></h3>
<% if User.current.can_modify_project?(@project.api_obj) %>
  <%= render partial: "shared/editor", locals: {text: @meta, mode: 'xml', save: {url: url_for(controller: 'project', action: 'save_meta'), method: 'POST', data: {project: @project.name, submit: 'meta'}}} %>
<% else %>
  <%= render partial: "shared/editor", locals: {text: @meta, mode: 'xml'} %>
<% end %>
