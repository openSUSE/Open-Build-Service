  <div class="dialog" id="disable_mask"></div>
  <div class="dialog darkgrey_box">
    <div class="box box-shadow">
      <h2 class="box-header">Unlock Confirmation</h2>
      <p>Do you really want to unlock <%= render :partial => 'shared/project_or_package_link', :locals => {:project => @project.value('name')} %>?</p>

      <%= form_tag({:controller => 'project', :action => 'unlock'}, :method => 'post') do %>
        <%= hidden_field_tag(:project, @project) %>
        <p>
          <%= label_tag(:comment, 'Comment:') %><br/>
          <%= text_area_tag(:comment, '', :size => '40x3') %><br/>
        </p>
        <div class="buttons">
          <%= submit_tag('Ok') %>
          <%= remove_dialog_tag('Cancel') %>
        </div>
      <% end %>
    </div>
  </div>
