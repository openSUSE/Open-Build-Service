<?xml version="1.0" encoding="UTF-8"?>
<sitemapindex xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
   <sitemap>
      <loc><%= url_for :controller => :main, :action => :sitemap_projects, :only_path => false %></loc>
   </sitemap>
   <sitemap>
      <loc><%= url_for :controller => :main, :action => :sitemap_projects_packages, :only_path => false %></loc>
   </sitemap>
   <% %w{ show }.each do |act| %>
     <sitemap>
        <loc><%= url_for :controller => :main, :action => :sitemap_packages, :category => 'main', 
                 :listaction => act, :only_path => false %></loc>
     </sitemap>
     <% for l in 'a'..'z' do %>
       <sitemap>
          <loc><%= url_for :controller => :main, :action => :sitemap_packages, :category => "home:#{l}", 
                   :listaction => act, :only_path => false %></loc>
       </sitemap>
     <% end %>
     <sitemap>
        <loc><%= url_for :controller => :main, :action => :sitemap_packages, :category => 'opensuse', 
                 :listaction => act, :only_path => false %></loc>
     </sitemap>
   <% end %>
</sitemapindex>

