<% @pagetitle = "Meta Configuration of Package #{@package}" %>
<% package_bread_crumb('Meta') %>

<%= render :partial => 'tabs' %>

<h3><%= @pagetitle %></h3>
<% if User.current.can_modify_package? @package.api_obj %>
  <%= render partial: "shared/editor", locals: {text: @meta, mode: 'xml', save: {url: url_for(controller: 'package', action: 'save_meta'), method: 'POST', data: {project: @project.name, package: @package.name, submit: 'meta'}}} %>
<% else %>
  <%= render partial: "shared/editor", locals: {text: @meta, mode: 'xml', read_only: true} %>
<% end %>
