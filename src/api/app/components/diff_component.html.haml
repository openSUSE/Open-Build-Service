.pre.scroll
  .diff{ class: "digits-#{diff.max_digits}" }>
    - lines.each do |line|
      - id = file_index ? "diff_#{file_index}_n#{line.index}" : nil
      .line-container{ id: }
        %div{ class: "line #{line.state}" }>
          - case line.state
          - when 'range'
            - if source_file
              = link_to(source_file, title: 'See original file') do
                .number.p-0.text-center.link-danger<
                  %i.fas.fa-file-arrow-down
            - else
              %a
                .number
            - if target_file
              = link_to(target_file, title: 'See submitted file') do
                .number.p-0.text-center.link-success<
                  %i.fas.fa-file-arrow-up
            - else
              %a
                .number
            .value<
              .text-muted.ms-3
                = line.content
          - when 'comment'
            .offset
              .text-muted.text
                = line.content
          - else
            = link_to("##{id}", class: 'd-flex') do
              .number<
                = line.original_index
              .number<
                = line.changed_index
            .value<
              %span.character><
                = line.content[0]
              %span.content><
                = line.content[1..]
        - if commented_lines.include?(id)
          .line-comment{ id: "comment#{id}" }
            - commentable.comments.where(diff_ref: id).each do |comment|
              .comments-thread.p-3
                = render BsRequestCommentComponent.new(comment: comment, level: 1, commentable: commentable, file_name: file_name)
        - else
          .btn.btn-sm.btn-primary.line-new-comment{ data: { id: id, 'request-number': commentable.bs_request.number, 'action-id': commentable.id, 'file-name': file_name } }
            %i.fas.fa-comment-medical
          .line-comment{ id: "comment#{id}" }
