<div class="dialog" id="disable_mask">
</div>
<div class="dialog darkgrey_box">
  <div class="box box-shadow">
    <h2 class="box-header">Edit your account</h2>
    <%= form_tag(:action => 'save') do %>
      <input id="user" name="user" type="hidden" value="<%= User.current.login %>" />
      <% if User.current.is_admin? %>
        <input id="globalrole" name="globalrole" type="hidden" value="Admin" />
      <% end %>
      <input id="state" name="state" type="hidden" value="<%= User.current.state %>" />
      <p>
         <%= label_tag :realname, 'Name:' %><br/>
         <%= text_field_tag :realname, User.current.realname %>
      </p>
      <p>
        <%= label_tag :email, 'e-Mail:' %><br/>
        <%= text_field_tag :email, User.current.email %>
      </p>
      <div class="buttons">
        <%= submit_tag("Ok") %>
        <%= remove_dialog_tag('Cancel') %>
      </div>
    <% end %>
  </div>
</div>
