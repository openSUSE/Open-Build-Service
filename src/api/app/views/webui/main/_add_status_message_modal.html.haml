.modal#status-message-modal{ role: 'dialog', tabindex: '-1' }
  .modal-dialog.modal-dialog-centered{ role: 'document' }
    .modal-content
      .modal-header
        %h5.modal-title Add Status Message
      .modal-body
        = form_tag(status_messages_path, method: 'post') do
          .form-group
            = label_tag(:message, 'Message:')
            = text_area_tag(:message, '', size: '40x3', required: true, class: 'form-control')
          .form-group
            = label_tag(:severity, 'Severity:')
            = select_tag(:severity, options_for_select(StatusMessage.severities.keys), class: 'form-control')
          .form-group
            = label_tag(:communication_scope, 'Communication Scope:')
            - options = StatusMessage.communication_scopes.keys.map { |scope| [scope.humanize, scope] }
            = select_tag(:communication_scope, options_for_select(options), class: 'form-control')
          .modal-footer
            = render partial: 'webui/shared/dialog_action_buttons'
