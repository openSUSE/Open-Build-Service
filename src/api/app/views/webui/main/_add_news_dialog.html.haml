.dialog.darkgrey_box
  .box.box-shadow
    %h2.box-header Add New Message
    .dialog-content
      = form_tag({ controller: 'main', action: 'add_news' }, method: 'post') do
        %p
          = label_tag(:message, 'Message:')
          %br/
          = text_area_tag(:message, '', size: '40x3', required: true)
          %br/
          = label_tag(:severity, "Severity:")
          %br/
          = select_tag(:severity, options_for_select([['Information', 0], ['Green', 1], ['Yellow', 2], ['Red', 3]]))
        = render partial: '/webui/shared/dialog_action_buttons'
