<% @pagetitle = "Create New Package"
   @metarobots = 'noindex'
   project_bread_crumb @pagetitle
-%>

<%= render :partial => "tabs" %>

<!--
<p>
<%= link_to('Create package using spec file wizard', :controller => 'package', :action => 'wizard_new', :project => @project.to_param) %>
(experimental)
</p>
-->
<h2><%= @pagetitle %> for <%= @project.name %></h2>

<%= form_tag controller: :package, action: 'save_new', project: @project.to_param do %>
<p>
  <strong>Name:</strong><br/>
  <%= text_field_tag 'name', @package_name, :size => 80 %><br/>
  <strong>Title:</strong><br/>
  <%= text_field_tag 'title', @package_title, :size => 80 %><br/>
  <strong>Description:</strong><br/>
  <%= text_area_tag 'description', @package_description, :cols => 80, :rows => 10 %><br/>
  <% unless @configuration['hide_private_options'] %>
    <%= check_box_tag :source_protection %>Deny access to sources of package.<br/>
  <% end %>
  <%= check_box_tag :disable_publishing %>Disable build results publishing.
</p>
<p><%= submit_tag %></p>
<% end %>
