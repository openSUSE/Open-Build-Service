<% @pagetitle = "Edit Project Information of #{@project}"
   @metarobots = 'noindex'
   project_bread_crumb 'Edit Project'
-%>

<%= render :partial => "tabs" %>

<h2><%= @pagetitle %></h2>

<%= form_for(@project, url: { action: :update }) do |f| %>
  <%= hidden_field_tag "id", @project.id %>
  <p>
    <strong>Title:</strong><br/>
    <%= f.text_field :title, :size => 80 %>
  </p>
  <p>
    <strong>Description:</strong><br/>
    <%= f.text_area :description, :rows => 20, :cols => 80 %>
  </p>
  <p><%= f.submit %></p>
<% end %>
