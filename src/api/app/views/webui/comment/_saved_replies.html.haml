- saved_replies = User.session.present? ? User.session.saved_replies : nil

- if saved_replies
  .dropdown#saved-reply-dropdown
    %button.btn.btn-secondary.dropdown-toggle#dropdown-menu-button{ 'data-toggle' => 'dropdown', :type => 'button' }
      %i.fas.fa-reply
    .dropdown-menu{ 'aria-labelledby' => 'dropdown-menu-button' }
      - saved_replies.each do |reply|
        %a.dropdown-item.reply{ 'data-body' => reply.body }
          = reply.title
