<% unless User.current.is_nobody? %>
  <%= save_comment_form do %>
    <p>
      <%= text_area_tag 'body', nil, :size => '80x4', :onkeyup => 'sz(this);', :onclick => 'sz(this);', :style => 'width: 90%;', :placeholder => 'Comment Text', :required => 'required' %>
    </p>
    <p><%= submit_tag 'Add comment'%></p>
  <%end%>
<% end %>
