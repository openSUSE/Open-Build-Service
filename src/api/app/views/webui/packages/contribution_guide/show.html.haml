- @pagetitle = "Contribution Guide of Package #{@package}"
- @pagetitle += " (inherited from project #{@project})" if @package.text_attachments.find_by(category: :contribution_guide)&.content.blank?

.card
  = render(partial: 'webui/package/tabs', locals: { project: @project, package: @package })
  .card-body
    %h3.mb-4= @pagetitle
    = sanitize @content
    - if true # policy(project).update?
      .pt-4
        = link_to(edit_project_package_contribution_guide_path(@project, @package), class: 'ps-0', remote: true, title: 'Edit') do
          %i.fas.fa-edit.text-secondary
          %span.nav-item-name Edit
