.border-bottom
  %ul.nav.nav-tabs.scrollable-tabs.border-0#request-tabs
    %li.nav-item.scrollable-tab-link
      = link_to('Conversation', request_conversation_path(bs_request.number, actions_count > 1 ? active_action : nil), class: "nav-link text-nowrap #{active == 'conversation' ? 'active' : ''}")
    - if action[:sprj] || action[:spkg]
      %li.nav-item.scrollable-tab-link.active
        = link_to('Build Results', request_build_results_path(bs_request.number, actions_count > 1 ? active_action : nil), class: "nav-link text-nowrap #{active == 'build_results' ? 'active' : ''}")
      %li.nav-item.scrollable-tab-link
        = link_to('RPM Lint', request_rpm_lint_path(bs_request.number, actions_count > 1 ? active_action : nil), class: "nav-link text-nowrap #{active == 'rpm_lint' ? 'active' : ''}")
    - if action[:type].in?(actions_for_diff)
      %li.nav-item.scrollable-tab-link
        = link_to('Changes', request_changes_path(bs_request.number, actions_count > 1 ? active_action : nil), class: "nav-link text-nowrap #{active == 'changes' ? 'active' : ''}")
        =# link_to('Changes', '#changes', id: 'changes-tab', class: 'nav-link text-nowrap', 'aria-controls': 'changes',
                  -# 'data-request-number': bs_request.number, 'data-request-action-id': action[:id],
                  -# 'aria-selected': 'false', 'data-bs-toggle': 'tab', role: 'tab')
    - if action[:type].in?(actions_for_diff)
      %li.nav-item.scrollable-tab-link
        = link_to(request_mentioned_issues_path(bs_request.number, actions_count > 1 ? active_action : nil), class: "nav-link text-nowrap #{active == 'mentioned_issues' ? 'active' : ''}") do
          Mentioned Issues
          %span.badge.bg-primary.align-text-top= issues.size
