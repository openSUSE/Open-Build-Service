.h2.text-center.py-2 Log In
= form_tag(log_in_params[:url], log_in_params[:options]) do
  - if ::Configuration.proxy_auth_mode_enabled?
    = hidden_field_tag(:context, 'default')
    = hidden_field_tag(:proxypath, 'reserve')
    = hidden_field_tag(:message, 'Please log in')
  .mb-3
    = text_field_tag(:username, nil, required: true, class: 'form-control', placeholder: 'Username')
  .mb-3
    = password_field_tag(:password, nil, required: true, class: 'form-control', placeholder: 'Password')
  .clearfix
    = submit_tag('Log In', class: 'btn btn-success w-100')
.login-separator.text-center
  %hr.my-4
  %span.bg-modal.px-3.text-muted or
  = form_tag('/auth/github', method: 'post', data: { turbo: false }) do
    %button{ class: 'btn btn-primary', type: 'submit' }
      Login with Github
- if can_sign_up?
  .login-separator.text-center
    %hr.my-4
    %span.bg-modal.px-3.text-muted or
  .text-center
    = sign_up_link
