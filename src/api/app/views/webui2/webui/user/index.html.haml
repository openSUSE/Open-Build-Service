- @pagetitle = 'Manage Users'

.card.mb-3
  = render partial: 'webui/configuration/tabs'
  .card-body
    %h3= @pagetitle
    %table.responsive.table.table-sm.table-striped.table-bordered#user-table{ data: { source: users_path } }
      %thead
        %tr
          %th
            User
          %th
            Local User
          %th
            State
          %th
            Actions
      %tbody

    .pt-4
      = link_to(user_register_user_path) do
        %i.fas.fa-plus-circle.text-primary
        Create User

- content_for :ready_function do
  initializeUserConfigurationDatatable("#{::Configuration.ldap_enabled?}");
