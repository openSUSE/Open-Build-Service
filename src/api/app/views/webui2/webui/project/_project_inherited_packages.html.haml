.card-body
  - if inherited_packages.present?
    .obs-dataTable
      %table.table.table-sm.table-fixed.table-striped.table-bordered#inherited-packages-table
        %thead
          %tr
            %th.w-75 Name
            %th From
        %tbody
          - inherited_packages.each do |package|
            %tr
              %td
                = link_to(package.first, package_show_path(package: package.first, project: package.second))
              %td
                = package.second
