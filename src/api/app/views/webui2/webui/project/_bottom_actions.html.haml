%ul.list-inline.mb-0
  - if (bugowners_mail.present? && !CONFIG['bugzilla_host'].nil?) || !User.current.is_nobody?
    - if bugowners_mail.present? && !CONFIG['bugzilla_host'].nil?
      = render partial: 'webui2/webui/project/bottom_actions/report_bug', locals: { bugowners_mail: bugowners_mail,
                                                                                    project: project }
    - if project.is_locked? && User.current.can_modify?(project, true)
      = render partial: 'webui2/webui/project/bottom_actions/unlock_project', locals: { project: project }
    - elsif User.current.can_modify?(project)
      = render partial: 'webui2/webui/project/bottom_actions/modify_project', locals: { project: project,
                                                                                        packages: packages,
                                                                                        has_patchinfo: has_patchinfo,
                                                                                        open_release_requests: open_release_requests,
                                                                                        release_targets: release_targets }
      = render partial: 'webui2/webui/project/bottom_actions/edit_project', locals: { project: project }
      = render partial: 'webui2/webui/project/bottom_actions/delete_project', locals: { project: project }
    - elsif !project.is_locked?
      = render partial: 'webui2/webui/project/bottom_actions/request_role_addition_and_deletion', locals: { project: project }
  - elsif project.key_info.present?
    = render partial: 'webui2/webui/project/bottom_actions/gpg_key_ssl_certificate', locals: { project: project }
