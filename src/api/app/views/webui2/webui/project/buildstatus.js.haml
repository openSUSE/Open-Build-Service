$('[data-toggle="popover"]').popover('dispose');

var elements = [];
$('.result div.collapse:not(.show)').map(function(_index, domElement) { elements.push($(domElement).data('element')); });

- locals_hash = { buildresults: @buildresults, project: @project, collapsed_repositories: @collapsed_repositories }
$('#build0 .result').html("#{escape_javascript(render(partial: 'buildstatus', locals: locals_hash))}");

$.each(elements, function(_index, element ) { $('a[aria-controls="' + element + '"]').click(); });

$('#build0 .build-refresh i').removeClass('fa-spin');
$('[data-toggle="popover"]').popover({ trigger: 'hover click' });
