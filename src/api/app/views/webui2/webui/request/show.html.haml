- content_for(:content_for_head, javascript_include_tag('webui2/cm2/index-diff'))

- if @request_webui_info.not_full_diff?
  = render partial: 'webui2/shared/truncated_diff_hint',
  locals: { path: request_show_path(number: @request_webui_info.number, full_diff: true) }

- @pagetitle = "Request #{@request_webui_info.number}"
.card.mb-3
  .card-header.d-flex.justify-content-between
    %h5
      Overview
  .card-body
    .row
      .col-md-8
        = render partial: 'show_overview', locals: { pagetitle: @pagetitle, description: @bs_request.description,
                                                     can_add_reviews: @request_webui_info.can_add_reviews?, number: @request_webui_info.number,
                                                     state: @request_webui_info.state }
      .col-md-4
        = render partial: 'show_side_links', locals: { request_creator: @bs_request.creator, request_created_at: @bs_request.created_at,
                                                       request_state: @request_webui_info.state,
                                                       package_maintainers: @request_webui_info.package_maintainers,
                                                       superseding: @request_webui_info.superseding, superseded_by: @request_webui_info.superseded_by,
                                                       accept_at: @request_webui_info.accept_at,
                                                       other_open_reviews: @request_webui_info.other_open_reviews,
                                                       my_open_reviews: @request_webui_info.my_open_reviews }

.card.mb-3
  .bg-light
    %ul.nav.nav-tabs{ role: 'tablist' }
      - @request_webui_info.actions.each_with_index do |action, index|
        %li.nav-item
          = link_to(action[:name], "##{valid_xml_id(action[:name])}", class: "nav-link text-nowrap #{('active' if index.zero?)}",
            data: { toggle: 'tab' }, role: 'tab')
  .card-body
    .tab-content
      - @request_webui_info.actions.each_with_index do |action, index|
        .tab-pane.fade.show{ id: valid_xml_id(action[:name]), class: ('active' if index.zero?) }
          = render('sourcediff_tab', action: action, request_creator: @bs_request.creator, index: index)
.row
  .col-md-8
    .card.mb-3
      .card-header.d-flex.justify-content-between
        %h5
          Comments for request #{@request_webui_info.number} (#{@comments.size})
      .card-body#comments
        = render partial: 'webui2/webui/comment/show', locals: { commentable: @bs_request }
  .col-md-4
    .card
      .card-header.d-flex.justify-content-between
        %h5
          Request History
      .card-body
        -# History content
.card
  .bg-light
    %ul.nav.nav-tabs{ role: 'tablist' }
      %li.nav-item
        %a.nav-link.text-nowrap.active{ href: '#decision', data: { toggle: 'tab' }, role: 'tab' }
          My decision
      - @request_webui_info.my_open_reviews.each_with_index do |review, index|
        %li.nav-item
          %a.nav-link.text-nowrap{ href: "#review-#{index}", data: { toggle: 'tab' }, role: 'tab' }
            Review for #{review[:who]}
  .card-body
    - if @request_webui_info.can_handle_request? && @request_webui_info.show_project_maintainer_hint?
      .alert.alert-warning
        You are a <strong>project maintainer</strong> but not a <strong>package maintainer</strong>. This package
        has <strong>#{pluralize(@request_webui_info.package_maintainers.size, 'package maintainer')}</strong> assigned. Please keep
        in mind that also package maintainers would like to review this request.
    .tab-content
      .tab-pane.fade.show.active{ id: 'decision' }
        - if @request_webui_info.can_handle_request?
          = render('decision_tab', request_number: @request_webui_info.number, request_creator: @request_webui_info.creator,
                    state: @request_webui_info.state, is_author: @request_webui_info.author?,
                    single_action_request: @request_webui_info.actions.count == 1, action: @request_webui_info.actions.first,
                    is_target_maintainer: @request_webui_info.target_maintainer?)
        - else
          %p
            There's nothing to be done right now
      - @request_webui_info.my_open_reviews.each_with_index do |review, index|
        .tab-pane.fade.show{ id: "review-#{index}" }
          = render('review_tab', review: review, request_number: @request_webui_info.number)

- unless User.current.is_nobody?
  = render partial: 'webui2/webui/request/add_reviewer_dialog'
= render partial: 'webui2/webui/request/show_package_maintainers', locals: { package_maintainers: @request_webui_info.package_maintainers }
