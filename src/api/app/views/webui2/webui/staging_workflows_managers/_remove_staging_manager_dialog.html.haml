.modal.fade{ id: "remove-staging-manager-#{staging_manager.id}", tabindex: -1, role: 'dialog',
             aria: { labelledby: 'remove-modal-label', hidden: true } }
  .modal-dialog.modal-dialog-centered{ role: 'document' }
    .modal-content
      .modal-header
        %h5.modal-title#remove-modal-label
          Remove staging manager?
      .modal-body
        %p
          Please confirm removal of staging manager #{staging_manager.login} for #{project}
        = form_tag(staging_workflow_staging_workflows_manager_path(staging_workflow: staging_workflow, id: staging_manager.id), method: :delete) do
          .modal-footer
            %button.btn.btn-sm.btn-outline-secondary.px-4{ data: { dismiss: 'modal' } }
              Cancel
            = submit_tag('Remove', class: 'btn btn-sm btn-danger px-4')
