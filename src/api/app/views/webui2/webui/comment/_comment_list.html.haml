- commentable.comments.without_parent.includes(:user).each do |comment|
  = render partial: 'webui2/webui/comment/content', locals: { comment: comment, commentable: commentable, level: 1 }

.comment_new
  = render partial: 'webui2/webui/comment/new', locals: { commentable: commentable }

:javascript
  $(document).ready(function() {
    $('.comments-list img').one('error', function() {
      $(this).replaceWith('<i class="fas fa-user-circle fa-2x ' + $(this).attr('class') + '"></i>');
    });
  });
