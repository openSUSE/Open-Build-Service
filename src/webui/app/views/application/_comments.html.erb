<div class="dialog" id="disable_mask"></div>

  <div class="dialog darkgrey_box">
    <div class="box box-shadow">
      <h2 class="box-header">Add new reply</h2>
        <%= form_tag :controller => params[:controller], :action => "save_comments" do %>
        <p>
          <strong>Comment:</strong><br/>
          <%= text_area_tag 'body', @body, :cols => 80, :rows => 10 %><br/>
          <%= hidden_field_tag 'parent_id', params[:parent_id] %>
          <%= hidden_field_tag 'user', session[:login] %>
        </p>

        <p>
          <div class="buttons">
            <%= submit_tag("Post reply") %>
            <%= remove_dialog_tag('Cancel') %>
          </div>
        </p>
        <% end %>
      </div>
    </div>
  </div>
