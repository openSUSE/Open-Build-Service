<% level ||= 0 %>
 
<% if children and !children.empty? %>
	<% children.each do |comment| %>
		<div class="child_comment level-<%=level%>">
			<div class="grid_2 alpha box box-shadow">
				<div class="comment_image">
					<%= user_icon(comment[:user], 80)%>
					By <%=comment[:user]%>
				</div>
			</div>
			<div class="grid_10 alpha box box-shadow">
				<p><%= comment[:body] %></p>
				<p>
					<% unless level > 5 %>
						<%=render partial: 'shared/comment_reply_link', locals: {comment: comment} %>
					<%end%>
				</p>
			</div>
		</div>

		<% unless comment[:children].empty? %>
			<%= render partial: 'shared/child_comment', locals: {children: comment[:children], level: level+1 } %>
		<% end %>	
	<% end %>
<% end %>